<log4net>
  <appender name="ConsoleLogger" type="log4net.Appender.ConsoleAppender">
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="Topshelf says: %message%newline" />
    </layout>
  </appender>

  <root>
    <!-- <level value="INFO" /> -->
    <level value="DEBUG" />
    <appender-ref ref="ConsoleLogger" />
  </root>
</log4net>

