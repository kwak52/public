<?xml version="1.0" encoding="utf-8" ?>
<!-- This section contains the log4net configuration settings -->
<log4net>
   <appender name="Console" type="log4net.Appender.ConsoleAppender">
       <layout type="log4net.Layout.PatternLayout">
           <!-- Pattern to output the caller's file name and line number -->
           <conversionPattern value="%d{HH:mm:ss,fff} [%t] %-5p %c %X{Notification} %X{Clock} %X{Reason} - %m%n" />
       </layout>
   </appender>

  <appender name="LogAppender" type="CpCommon.LogAppender">
    <file type="log4net.Util.PatternString" value="%property{LogFileName}.log" />   <!-- see Log4NetWrapper.Install() method -->
    <appendToFile value="false" /> <!-- create new files, not appending to existing file -->
    <datePattern value="-yyyy-MM-dd" />
    <rollingStyle value="Date" />
            
    <layout type="log4net.Layout.PatternLayout">
      <!-- daytime thread level sender symbol action simulationclock reason - message newline -->
      <!-- <conversionPattern value="%d&#9;[%t]&#9;%-5p&#9;%c&#9;%X{Notification}&#9;%X{Clock}&#9;%m&#9;%method&#9;%location&#9;%line%n" /> -->
      <!-- &#9; means tab character -->
      <conversionPattern value="%d&#9;[%t]&#9;%-5p&#9;%c&#9;%X{Notification}&#9;%X{Clock}&#9;%X{Reason}&#9;%m%n" />
    </layout>
  </appender>


  <root>
		<level value="DEBUG" />
		<appender-ref ref="Console" />
    <appender-ref ref="LogAppender" />
  </root>
	
</log4net>