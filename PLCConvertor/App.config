<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
    <section name="exportPdv" type="WinFormRibonAppFx.CustomConfigurationSection, WinFormRibonAppFx"/>
  </configSections>

  <log4net>
    <appender name="FileLogger" type="log4net.Appender.RollingFileAppender">
      <file type="log4net.Util.PatternString" value="log-modeler-%date{yyyyMMdd}.txt"/>
      <encoding value="utf-8"/>
      <appendToFile value="true"/>
      <rollingStyle value="Date"/>
      <preserveLogFileNameExtension value="true"/>
      <datePattern value="yyyyMMdd"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%d{yyyy.MM.dd HH:mm:ss.fff} [%thread] %-5level %message%newline"/>
      </layout>
    </appender>
    <appender name="ConsoleLogger" type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="= %message%newline"/>
      </layout>
    </appender>
    <root>
      <level value="DEBUG"/>
      <appender-ref ref="ConsoleLogger"/>
    </root>
    <logger name="PLCConvertor">
      <level value="DEBUG"/>
      <appender-ref ref="FileLogger"/>
    </logger>
  </log4net>

  <appSettings>
    <add key="addressMappingRuleFile" value="Config/AddressMappingRule.json" />
    <add key="userDefinedCommandMappingFile" value="Config/UserDefinedCommandMappingFile.json" />
  </appSettings>

  <!--Custom section demo-->
  <exportPdv sourceFolderPrefix="T:/pruef_cp" destinationFolderPrefix="F:/tmp/pruef_cp_Q" destinationDBServerIp="dualsoft.co.kr" allowOverwrite="true" fileOverwritePolicy="OverwriteIfFileChanged"/>

  <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8"/>
    </startup>
</configuration>
